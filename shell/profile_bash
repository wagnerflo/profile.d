# -*- mode: sh -*-

#####################################################################
# profile_bash: this provides bash specific config
#

# include common shell functionallity
. ~/.profile.d/shell/profile_sh

# prompt
export PS1='[\[\033[00;31m\]\h\[\033[00m\]] \[\033[00;34m\]\W \$ \[\033[00m\]'

# bash history stuff
HISTCONTROL=ignoredups:ignorespace
shopt -s histappend

# check windowsize after each command
shopt -s checkwinsize
