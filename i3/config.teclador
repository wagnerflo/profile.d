# run pipewire
exec --no-startup-id /usr/bin/pipewire

# initially disable touchscreen
exec --no-startup-id ~/.profile.d/i3/touchscreen disable

# override font size
font pango:DejaVu Sans Mono 8

# display workspace bar
bar {
  output eDP-1
  font pango:DejaVu Sans Mono, Font Awesome 5 Free 9
  status_command i3status-rs ~/.profile.d/i3/i3status.teclador.conf
}
